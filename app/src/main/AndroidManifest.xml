<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yogdroidtech.mymall">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/splash_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/splash_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMall">
        <activity android:name=".ReviewActivity"></activity>
        <activity android:name=".newaddress.NewAddressActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".productdetail.ProductDetailActivity" />
        <activity android:name=".products.ProductsActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>